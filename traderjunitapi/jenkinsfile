pipeline{
agent any

tools {
    maven 'maven'
  }
stages{
        stage('Build'){
                      steps{
                          script{
                                 try{
                                      sh " mvn -f traderjunitapi/pom.xml  clean install"
                                 }
                                 catch(all){
                                      echo "Build Failed"
                                 }
                          }
                     }
                   }

        stage('Test'){
                      steps{
                          script{
                                 try{
                                      sh " mvn -f traderjunitapi/pom.xml  test"
                                 }
                                 catch(all){
                                      echo "Test Failed"
                                 }
                          }
                     }
                   }


         stage("Test and Jacoco Static analysis"){
               steps{
                    script{
                        try{
                              junit 'traderjunitapi/target/surefire-reports/**/*.xml'
                              jacoco()
                        }
                        catch(all){
                                  echo "Install stage Failed"
                        }
                    }
               }
        }


                   
                }
                 
                 
 }
